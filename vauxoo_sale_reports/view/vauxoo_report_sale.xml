<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <template id='vauxoo_sale_quotatio_report' inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='oe_structure']" position="replace">
        &lt;!DOCTYPE&gt;
        <t t-call="report.html_container">
        <table class="table_column_border table_alter_color_row table_title_bg_color" width="100%">
            <tr>
                <th width="30%">Invoice to</th>
                <th width="30%">Devilery In</th>
                <th width="20%">Payment Term <sup>(1)</sup></th>
                <th width="20%">Delivery Term <sup>(2)</sup></th>
            </tr>
            <tr>
                <td>
                    <t t-raw=" o.partner_id and o.partner_id.name or '' "/>
                    <span t-field="o.partner_id.name"/>
                    <strong>VAT.:</strong>
                    <span t-esc="o.partner_invoice_id.vat and o.partner_invoice_id.vat[2:] or 'No Hay Suficiente Informacion para Facturar'"/>
                    <strong>Address</strong>
                    <span t-field="o.partner_invoice_id.street"/>
                    <span t-field="o.partner_invoice_id.street2"/>
                    <span t-field="o.partner_invoice_id.city"/>
                    <span t-esc="o.partner_invoice_id.state_id and o.partner_invoice_id.state_id.name"/>
                    <span t-esc="o.partner_invoice_id.country_id and o.partner_invoice_id.country_id.name"/>
                    <span t-field="o.partner_invoice_id.phone"/>
                    <strong>Contac: </strong>
                    <span t-field="o.partner_invoice_id and o.partner_invoice_id.name"/>
                </td>
                <td>
                    <span t-esc="o.partner_shipping_id.name or 'NO APLICA'"/>
                    <span t-field="o.partner_shipping_id.street"/>
                    <span t-field="o.partner_shipping_id.street2"/>
                    <span t-field="o.partner_shipping_id.zip"/>
                    <span t-field="o.partner_shipping_id.city"/>
                    <span t-esc="o.partner_shipping_id.state_id and o.partner_shipping_id.state_id.name"/>
                    <span t-esc="o.partner_shipping_id.country_id and o.partner_shipping_id.country_id.name"/>
                    <span t-field="o.partner_shipping_id.phone"/>
                </td>
                <td class="td_center">
                    <span t-field="o.payment_term"/>
                </td>
            </tr>
        </table>
        <section>
            <table class="table_column_border table_alter_color_row table_title_bg_color" width="100%">
                <tr>
                    <th width="10%">
                        Quantity
                        <hr/>
                        [ LiNEA ]
                    </th>
                    <th width="70%">
                        Product Code
                        <hr/>
                        Description
                        <hr/>
                        Deadline
                    </th>
                    <th width="10%">
                        Unit
                        <hr/>
                        Price<sup>(4)</sup>
                    </th>
                    <th width="10%">
                        SubTotal
                    </th>
                </tr>
                <tbody>
                <tr t-foreach="o.order_line" t-as="line">
                    <td class="td_center" valign="top">
                        <span t-esc="line.product_uos and line.product_uos_qty or line.product_uom_qty"/>
                        <hr/>
                            <p>[<span t-field="line.sequence"/>]</p>
                    </td>
                    <td>
                        <p>[<span t-field="line.product_id.default_code"/>] <span t-field="line.product_id and line.product_id.name"/></p>
                        <hr/>
                        <span t-field="line.name"/>
                        <pre class="pre_description"><span t-esc="line.product_id and line.product_id.description"/></pre>
                        <hr/>
                        <i t-if='not line.delay==0.00'>Deadline: <span t-field="line.delay"/></i>
                        <i><span t-esc="line.delay == 0.00 and 'A CONVENIR'"/></i>
                    </td>
                    <td class="td_center" valign="top">
                        <span t-field="line.product_uom.name"/>
                        <hr/>
                        <span t-field="line.price_unit"/>
                    </td>
                    <td class="td_amount" valign="top">
                        <span t-field="line.price_subtotal"/>
                    </td>
                </tr>
                </tbody>
            </table>
        </section>
        <table  width="100%" style="border-collapse:collapse" class="table_only_border_bottom">
            <tr>
                <td width="80%" class="td_without_bottom"></td>
                <td width="5%"  class="sub_total_td">
                    <strong>SubTotal</strong></td>
                <td width="15%" align="right" class="sub_total_td">
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                    <span t-field="o.amount_untaxed"/>
                </td>
            </tr>
            <tr>
                <td class="td_without_bottom"></td>
                <td class="sub_total_td">
                    <strong>Tax</strong></td>
                <td align="right" class="sub_total_td">
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                    <span t-field="o.amount_tax"/>
                </td>
            </tr>
            <tr>
                <td class="td_without_bottom"></td>
                <td class="td_without_bottom total_td">
                    <strong>Total</strong></td>
                <td align="right" class="sub_total_td">
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.name or ''"/>
                    <span t-field="o.amount_total"/>
                </td>
            </tr>
        </table>
        <table class="table_column_border table_alter_color_row table_title_bg_color" width="100%">
                <tr>
                    <th>
                        Conditions
                    </th>
                </tr>
                <tr>
                    <td style="font-size: 6;">
                        <t t-if='o.note'>
                        <strong>Notes</strong>
                            Notes:
                            <pre style="font-size: 6;"><span t-field="o.note"/></pre>
                        </t>
                        <t t-if='(o.payment_term and o.payment_term.name) and (o.payment_term and o.payment_term.note)'>
                            (1) Payment Terms:
                            <pre style="font-size: 6;"><span t-esc="o.payment_term and o.payment_term.name or ''"/><span t-esc="o.payment_term and o.payment_term.note or ''"/></pre>
                        </t>
                        <t t-if='o.incoterm and o.incoterm.description'>
                            (2) Delivery Terms:
                            <pre style="font-size: 6;"><span t-esc="o.incoterm and o.incoterm.description or 'No se ha estipulado tÃ©rminos comerciales de transporte'"/></pre>
                        </t>
                    </td>
                </tr>
        </table>
        <center>
            <table class="table_column_border table_alter_color_row table_title_bg_color" width="30%">
                <tr>
                    <th>Salesman</th>
                </tr>
                <tr>
                    <td class="td_bold td_center">
                        <t t-if='o.user_id'>
                            <span t-esc="o.user_id.name.upper()"/>
                        </t>
                    </td>
                </tr>
            </table>
        </center>
        </t>
        </xpath>
    </template>
</data>
</openerp>
