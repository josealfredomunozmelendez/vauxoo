<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <template id='vauxoo_sale_quotatio_report' inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='report.external_layout']" position="replace">
        <t t-call="vauxoo_sale_reports.external_layout">
        <div class="page">
            <div class="row" style="padding-top: 10px;">
                <div class="col-xs-6">
                    <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">Your Fiscal Information</h5>
                    <address class="address">
                        <strong><t t-esc="o.partner_invoice_id and o.partner_invoice_id.name.capitalize()"/></strong><br/>
                        <t t-if="o.partner_invoice_id.vat" t-esc="o.partner_invoice_id.vat and o.partner_invoice_id.vat[2:] or ''"></t><span t-if="o.partner_invoice_id.vat">,</span>
                        <t t-if="o.partner_invoice_id.street" t-esc="o.partner_invoice_id.street"></t><span t-if="o.partner_invoice_id.street">,</span>
                        <t t-if="o.partner_invoice_id.street2" t-esc="o.partner_invoice_id.street2"></t><span t-if="o.partner_invoice_id.street2">,</span>
                        <t t-if="o.partner_invoice_id.l10n_mx_street3" t-esc="o.partner_invoice_id.l10n_mx_street3"></t><span t-if="o.partner_invoice_id.l10n_mx_street3">,</span>
                        <t t-if="o.partner_invoice_id.l10n_mx_street4" t-esc="o.partner_invoice_id.l10n_mx_street4"></t><span t-if="o.partner_invoice_id.l10n_mx_street4">,</span>
                        <t t-if="o.partner_invoice_id.city_id" t-esc="o.partner_invoice_id.city_id.name"></t><span t-if="o.partner_invoice_id.city_id">,</span>
                        <t t-if="o.partner_invoice_id.state_id" t-esc="o.partner_invoice_id.state_id.name"></t><span t-if="o.partner_invoice_id.state_id">,</span>
                        <t t-if="o.partner_invoice_id.country_id" t-esc="o.partner_invoice_id.country_id.name"></t>.
                        <t t-if="o.partner_invoice_id.zip" t-esc="o.partner_invoice_id.zip"></t><span t-if="o.partner_invoice_id.zip">,</span>
                    </address>
                </div>
                <div class="col-xs-6" t-if="o.partner_shipping_id.id != o.partner_invoice_id.id">
                    <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">Your Contact Information</h5> <!-- TODO: Dear future me, please send this to a css -->
                    <address>
                        <strong><t t-esc="o.partner_shipping_id and o.partner_shipping_id.name"/></strong><br/>
                        <t t-esc="o.partner_shipping_id.phone"></t><br t-if="o.partner_shipping_id.phone"/>
                        <t t-esc="o.partner_shipping_id.fax"></t><br t-if="o.partner_shipping_id.fax"/>
                        <t t-esc="o.partner_shipping_id.mobile"></t><br t-if="o.partner_shipping_id.mobile"/>
                        <t t-esc="o.partner_shipping_id.email"></t><br t-if="o.partner_shipping_id.email"/>
                    </address>
                </div>
            </div>
            <div class="row">

            </div>
            <div class="col-xs-12">
                <h4 class="text-center hidden">Details</h4>
                <h5 class="text-right">
                    <span><strong>Salesman</strong>: </span><span t-esc="o.user_id.partner_id.name.replace('[Vauxoo]','')"/>
                </h5>
            </div>
            <div class="row">
            <div class="col-xs-12">
            <table class="table-striped table-bordered  table-condensed table" width="100%">
                <thead class="text-center">
                <tr>
                    <th> <span>Line</span> </th>
                    <th> <span>Qty</span> </th>
                    <th>
                        <span>Code and Description</span>
                    </th>
                    <th>
                        <span>Price</span>
                    </th>
                    <th>
                        <span>Unit</span>
                    </th>
                    <th>
                        <span>SubTotal</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            [<span t-field="line.sequence"/>]
                        </td>
                        <td>
                            <span t-esc="line.product_uos and line.product_uos_qty or line.product_uom_qty"/><br/>
                        </td>
                        <td>
                            <div class="col-xs-12">
                            <t t-raw="line.desc2html"/>
                            </div>
                        </td>
                        <td class="text-center">
                            <span t-field="line.price_unit"/><br/>
                        </td>
                        <td class="text-center">
                            <p><t t-raw="line.product_uom.name"/></p>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-md-8">
                    <span><strong>All amounts are represented in:</strong> (</span><span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>)
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.name or ''"/><br/>
                    <t t-if="o.payment_term">
                        <strong>Payment Information:</strong> <br/>
                        <p t-field="o.payment_term"/>
                        <t t-if="o.payment_term.name.strip() != o.payment_term.note.strip()"><t t-raw="o.payment_term.note"/></t>
                    </t>
                </div>
                <div class="col-xs-6 col-md-4 text-right">
                    <span class="col-xs-4 text-left"><strong>SubTotal</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_untaxed"/><br/>
                    <span class="col-xs-4 text-left"><strong>Tax</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_tax"/><br/>
                    <span class="col-xs-4 text-left"><strong>Total</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_total"/>
                </div>
            </div>
            <div class="row" t-if="o.note">
                <h3>Terms and Conditions</h3>
                <div class="col-xs-12 text-justified"><t  t-raw="o.note2html"/></div>
            </div>
        </div>
        </t>
        </xpath>
    </template>
</data>
</openerp>
