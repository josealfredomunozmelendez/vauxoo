<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <template id='vauxoo_sale_quotatio_report' inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='report.external_layout']" position="replace">
        <t t-call="vauxoo_sale_reports.external_layout">
        <div class="page">
            <div class="row">
                <div class="col-xs-6">
                    <h5>Your Fiscal Information</h5>
                    <address>
                        <strong><t t-esc="o.partner_invoice_id and o.partner_invoice_id.name"/></strong><br/>
                        <t t-if="o.partner_invoice_id.vat" t-esc="o.partner_invoice_id.vat"><br t-if="o.partner_invoice_id.vat"/></t>
                        <t t-if="o.partner_invoice_id.street" t-esc="o.partner_invoice_id.street"><br t-if="o.partner_invoice_id.street"/></t>
                        <t t-if="o.partner_invoice_id.street2" t-esc="o.partner_invoice_id.street2"><br t-if="o.partner_invoice_id.street2"/></t>
                        <t t-if="o.partner_invoice_id.city_id" t-esc="o.partner_invoice_id.city_id.name"><br t-if="o.partner_invoice_id.city_id"/></t>
                        <t t-if="o.partner_invoice_id.state_id" t-esc="o.partner_invoice_id.state_id.name"><br t-if="o.partner_invoice_id.city_id"/></t>
                        <t t-if="o.partner_invoice_id.country_id" t-esc="o.partner_invoice_id.country_id.name"></t>
                    </address>
                </div>
                <div class="col-xs-6">
                    <h5 class="text-right">Quotation Number: <span t-raw="o.name"/></h5>
                    <div class="col-xs-12">
                        <div class="row" t-if="o.partner_shipping_id.id != o.partner_invoice_id.id ">
                            <div class="row">
                                <span class="col-xs-4">Contact:</span><span class="col-xs-8" t-esc="o.partner_shipping_id.name"/><br/>
                            </div>
                            <div class="row" t-if="o.partner_shipping_id.phone and o.partner_shipping_id.phone != o.partner_invoice_id.phone">
                                <span class="col-xs-4">Phone:</span><span class="col-xs-8" t-esc="o.partner_shipping_id.phone"/><br/>
                            </div>
                            <div class="row" t-if="o.partner_shipping_id.email and o.partner_shipping_id.email != o.partner_invoice_id.email">
                                <span class="col-xs-4">Email:</span><span class="col-xs-8" t-esc="o.partner_shipping_id.email"/><br/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">
                <h4 class="text-center hidden">Details</h4>
                <h5 class="text-right">
                    <span><strong>Salesman</strong>: </span><span t-esc="o.user_id.partner_id.name.replace('[Vauxoo]','')"/>
                </h5>
            </div>
            <div class="row">
            <div class="col-xs-12">
            <table class="table-striped table" width="100%">
                <thead class="text-center">
                <tr>
                    <th> <span>Line</span> </th>
                    <th> <span>Qty</span> </th>
                    <th>
                        <span>Code and Description</span>
                    </th>
                    <th>
                        <span>Unit</span>
                    </th>
                    <th>
                        <span>Price</span>
                    </th>
                    <th>
                        <span>SubTotal</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            [<span t-field="line.sequence"/>]
                        </td>
                        <td>
                            <span t-esc="line.product_uos and line.product_uos_qty or line.product_uom_qty"/><br/>
                        </td>
                        <td>
                            [<span t-field="line.product_id.default_code"/>] <span t-field="line.product_id and line.product_id.name"/>
                            <t t-raw="line.desc2html"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.price_unit"/><br/>
                        </td>
                        <td class="text-center">
                            <p><t t-raw="line.product_uom.name"/></p>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-md-8">
                    <small><span><strong>All amounts are represented in </strong>: </span><span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                    <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.name or ''"/></small>
                </div>
                <div class="col-xs-6 col-md-4 text-right">
                    <span class="col-xs-4 text-left"><strong>SubTotal</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_untaxed"/><br/>
                    <span class="col-xs-4 text-left"><strong>Tax</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_tax"/><br/>
                    <span class="col-xs-4 text-left"><strong>Total</strong>:</span> <span class="col-xs-1" t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/> <span class="col-xs-7" t-field="o.amount_total"/>
                </div>
            </div>
            <div class="row" t-if="o.note">
                <p class="text-justified"><t  t-raw="o.note2html"/></p>
            </div>
        </div>
        </t>
        </xpath>
    </template>
</data>
</openerp>
