<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <template id='vauxoo_sale_quotatio_report' inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='report.external_layout']" position="replace">
        <t t-call="report.external_layout">
        <div class="page">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-6">
                </div>
                <div class="col-xs-6">
                    <h5>Your Fiscal Information:</h5>
                    <address>
                        <strong><t t-esc="o.partner_invoice_id and o.partner_invoice_id.name"/></strong><br/>
                        <t t-esc="o.partner_invoice_id.vat and o.partner_invoice_id.vat[2:] or 'Not enought info to invoice:'"/><br/>
                        <t t-esc="o.partner_invoice_id.street"/>
                        <t t-esc="o.partner_invoice_id.street2"/>
                        <t t-esc="o.partner_invoice_id.city"/>
                        <t t-esc="o.partner_invoice_id.state_id and o.partner_invoice_id.state_id.name"/>
                        <t t-esc="o.partner_invoice_id.country_id and o.partner_invoice_id.country_id.name"/>
                    </address>
                </div>
                <div class="col-xs-6">
                    <h5 class="text-right">Quotation Number: <span t-raw="o.name"/></h5>
                    <address t-if="o.partner_shipping_id.id != o.partner_invoice_id.id ">
                        Contact Name: <span t-esc="o.partner_shipping_id.name"/><br/>
                        Phone: <span t-if="o.partner_shipping_id.phone and o.partner_shipping_id.phone != o.partner_invoice_id.phone" t-esc="o.partner_shipping_id.phone"/><br/>
                        Email: <span t-if="o.partner_shipping_id.email" t-esc="o.partner_shipping_id.email"/><br/>
                    </address>
                </div>
            </div>
            <div class="row">
            <div class="col-xs-12">
            <table class="table-striped table" width="100%">
                <thead class="text-center">
                <tr>
                    <th> <span>Line</span> </th>
                    <th> <span>Qty</span> </th>
                    <th>
                        <span>Code and Description</span>
                    </th>
                    <th>
                        <span>Unit</span>
                        <span>Price<sup>(4)</sup></span>
                    </th>
                    <th>
                        <span>SubTotal</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td class="td_center" valign="top">
                            [<span t-field="line.sequence"/>]
                        </td>
                        <td class="td_center" valign="top">
                            <span t-esc="line.product_uos and line.product_uos_qty or line.product_uom_qty"/><br/>
                        </td>
                        <td>
                            [<span t-field="line.product_id.default_code"/>] <span t-field="line.product_id and line.product_id.name"/>
                            <span t-field="line.name"/>
                            <span t-esc="line.product_id and line.product_id.description"/>
                            <t t-if='not line.delay==0.00'><strong>Deadline:</strong> <span t-field="line.delay"/></t>
                            <span t-esc="line.delay == 0.00 and 'A CONVENIR'"/>
                        </td>
                        <td class="td_center" valign="top">
                            <span t-field="line.price_unit"/><br/>
                            <span t-field="line.product_uom.name"/>
                        </td>
                        <td class="td_amount" valign="top">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
            </div>
            <table  width="100%" style="border-collapse:collapse" class="table_only_border_bottom">
                <tr>
                    <td width="80%" class="td_without_bottom"></td>
                    <td width="5%"  class="sub_total_td">
                        <strong>SubTotal</strong></td>
                    <td width="15%" align="right" class="sub_total_td">
                        <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                        <span t-field="o.amount_untaxed"/>
                    </td>
                </tr>
                <tr>
                    <td class="td_without_bottom"></td>
                    <td class="sub_total_td">
                        <strong>Tax</strong></td>
                    <td align="right" class="sub_total_td">
                        <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                        <span t-field="o.amount_tax"/>
                    </td>
                </tr>
                <tr>
                    <td class="td_without_bottom"></td>
                    <td class="td_without_bottom total_td">
                        <strong>Total</strong></td>
                    <td align="right" class="sub_total_td">
                        <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.symbol or ''"/>
                        <span t-esc="o.pricelist_id and o.pricelist_id.currency_id and o.pricelist_id.currency_id.name or ''"/>
                        <span t-field="o.amount_total"/>
                    </td>
                </tr>
            </table>
            <table class="table_column_border table_alter_color_row table_title_bg_color" width="100%">
                    <tr>
                        <th>
                            Conditions
                        </th>
                    </tr>
                    <tr>
                        <td style="font-size: 6;">
                            <t t-if='o.note'>
                            <strong>Notes</strong>
                                Notes:
                                <pre style="font-size: 6;"><span t-field="o.note"/></pre>
                            </t>
                            <t t-if='(o.payment_term and o.payment_term.name) and (o.payment_term and o.payment_term.note)'>
                                (1) Payment Terms:
                                <pre style="font-size: 6;"><span t-esc="o.payment_term and o.payment_term.name or ''"/><span t-esc="o.payment_term and o.payment_term.note or ''"/></pre>
                            </t>
                            <t t-if='o.incoterm and o.incoterm.description'>
                                (2) Delivery Terms:
                                <pre style="font-size: 6;"><span t-esc="o.incoterm and o.incoterm.description or 'No se ha estipulado tÃ©rminos comerciales de transporte'"/></pre>
                            </t>
                        </td>
                    </tr>
            </table>
        <center>
            <table class="table_column_border table_alter_color_row table_title_bg_color" width="30%">
                <tr>
                    <th>Salesman</th>
                </tr>
                <tr>
                    <td class="td_bold td_center">
                        <t t-if='o.user_id'>
                            <span t-esc="o.user_id.name.upper()"/>
                        </t>
                    </td>
                </tr>
            </table>
        </center>
        </div>
        </t>
        </xpath>
    </template>
</data>
</openerp>
