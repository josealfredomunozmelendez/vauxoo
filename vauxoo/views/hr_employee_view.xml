<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_job_survey" model="ir.ui.view">
            <field name="name">hr.employee.job.wage</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='address_id']" position="after">
                <field name="wage"/>
              </xpath>
            </field>
        </record>
        <record id="view_hr_job_tree" model="ir.ui.view">
            <field name="name">hr.employee.job.tree.wage</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='department_id']" position="after">
                <field name="wage"/>
                <field name="address_id"/>
              </xpath>
            </field>
        </record>
        <record id="view_job_filter" model="ir.ui.view">
            <field name="name">hr.employee.job.search</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_job_filter"/>
            <field name="arch" type="xml">
              <xpath expr="//group[last()]" position="before">
                <field name="address_id"/>
              </xpath>
              <xpath expr="//group[last()]" position="inside">
                <filter string="Address" domain="[]" context="{'group_by':'address_id'}"/>
              </xpath>
            </field>
        </record>
        <record id="hr_timesheet_employee_extd_form" model="ir.ui.view">
            <field name="name">hr.employee.hour</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="sale_timesheet.hr_timesheet_employee_extd_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Cost Analysis" name="cost" groups="vauxoo.directive">
                        <group>
                            <group string="Performance">
                                <field name="theoretical_timesheet"/>
                                <field name="hours_invoice"/>
                                <field name="hours_informed"/>
                            </group>
                            <group string="Amounts">
                                <field name="contract_id"/>
                                <field name="total_salary"/>
                                <field name="salary_on_job"/>
                                <field name="perceived_salary"/>
                                <field name="theoretical_cost"/>
                                <field name="current_cost"/>
                                <field name="is_cost"/>
                                <field name="generate_income"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_employee_analysis_tree" model="ir.ui.view">
            <field name="name">hr.employee.hour</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="company_id"/>
                    <field name="job_id"/>
                    <field name="total_salary" sum="Total Salaries" widget="monetary"/>
                    <field name="salary_on_job" sum="Total Salaries by Job" widget="monetary"/>
                    <field name="perceived_salary" sum="Total Perceived Salaries" widget="monetary"/>
                    <field name="theoretical_cost" widget="monetary"/>
                    <field name="current_cost" widget="monetary"/>
                    <field name="theoretical_timesheet" widget="monetary"/>
                    <field name="hours_invoice" sum="Total Hours"/>
                    <field name="hours_informed" sum="Total Hours"/>
                    <field name="generate_income"/>
                    <field name="is_cost"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_employee_graph">
            <field name="name">hr.employee.graph</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <graph string="Salaries per job">
                    <field name="job_id"/>
                    <field name="total_salary" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="action_employee_analysis" model="ir.actions.act_window">
            <field name="name">Employee Cost Analysis</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="view_id" ref="view_employee_analysis_tree"/>
        </record>
        <menuitem action="action_employee_analysis" id="menu_action_employee_analysis" parent="hr.menu_hr_root" sequence="50"/>
</odoo>
