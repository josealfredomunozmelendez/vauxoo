<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_job_survey" model="ir.ui.view">
            <field name="name">hr.employee.job.wage</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='address_id']" position="after">
                <field name="wage"/>
              </xpath>
            </field>
        </record>
        <record id="view_hr_job_tree" model="ir.ui.view">
            <field name="name">hr.employee.job.tree.wage</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='department_id']" position="after">
                <field name="wage"/>
                <field name="address_id"/>
              </xpath>
            </field>
        </record>
        <record id="view_job_filter" model="ir.ui.view">
            <field name="name">hr.employee.job.search</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_job_filter"/>
            <field name="arch" type="xml">
              <xpath expr="//group[last()]" position="before">
                <field name="address_id"/>
              </xpath>
              <xpath expr="//group[last()]" position="inside">
                <filter string="Address" domain="[]" context="{'group_by':'address_id'}"/>
              </xpath>
            </field>
        </record>
        <record id="hr_timesheet_employee_extd_form" model="ir.ui.view">
            <field name="name">hr.employee.hour</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="sale_timesheet.hr_timesheet_employee_extd_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Cost Analysis" name="cost" groups="vauxoo.directive">
                        <group>
                            <group string="Performance">
                                <field name="theoretical_timesheet"/>
                                <field name="hours_invoice"/>
                                <field name="hours_informed"/>
                            </group>
                            <group string="Amounts">
                                <field name="contract_id"/>
                                <field name="total_salary"/>
                                <field name="salary_on_job"/>
                                <field name="perceived_salary"/>
                                <field name="theoretical_cost"/>
                                <field name="current_cost"/>
                                <field name="is_cost"/>
                                <field name="generate_income"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_employee_analysis_tree" model="ir.ui.view">
            <field name="name">hr.employee.hour</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="company_id"/>
                    <field name="job_id"/>
                    <field name="total_salary" sum="Total Salaries" widget="monetary"/>
                    <field name="salary_on_job" sum="Total Salaries by Job" widget="monetary"/>
                    <field name="perceived_salary" sum="Total Perceived Salaries" widget="monetary"/>
                    <field name="theoretical_cost" sum="Total Theoretical Cost" widget="monetary"/>
                    <field name="current_cost" sum="Total Current Cost" widget="monetary"/>
                    <field name="theoretical_timesheet" sum="Total Theoretical Timesheet" widget="monetary"/>
                    <field name="hours_invoice" sum="Total Hours"/>
                    <field name="hours_informed" sum="Total Hours"/>
                    <field name="generate_income"/>
                    <field name="is_cost"/>
                </tree>
            </field>
        </record>

        <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Is Cost" domain="[]" context="{'group_by':'is_cost'}" groups="vauxoo.directive"/>
                    <filter string="Generate Income" domain="[]" context="{'group_by':'generate_income'}" groups="vauxoo.directive"/>
                </xpath>
             </field>
         </record>

        <record model="ir.ui.view" id="hr_kanban_view_employees">
            <field name="name">hr.employee.kanban.analysis</field>
            <field name="model">hr.employee</field>
            <field name="priority">100</field>
            <field name="groups_id" eval="[(6, 0, [ref('vauxoo.directive')])]"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard o_salesteam_kanban">
                    <field name="last_login"/>
                    <field name="message_is_follower"/>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="message_needaction_counter"/>
                    <field name="theoretical_timesheet"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('hr.employee', 'image_medium', record.id.value)"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <div class="col-xs-6" style="text-align: left">
                                                <strong>
                                                    <field name="name"/>
                                                </strong>
                                                <ul>
                                                    <li t-if="record.job_id.raw_value"><i><field name="job_id"/></i></li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Generate Income: <field name="generate_income"/></li>
                                                    <li>It's Cost: <field name="is_cost"/></li>
                                                </ul>
                                            </div>

                                            <div class="col-xs-8">
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                            <div class="col-xs-4 text-right">
                                                <a type="edit">Settings</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="container o_kanban_card_content col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title" style="text-align: center">
                                                <span>Salary</span>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Total:</li>
                                                    <li>On Job:</li>
                                                    <li>Perceived:</li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: left">
                                                <ul>
                                                    <li><field name="total_salary"/></li>
                                                    <li><field name="salary_on_job"/></li>
                                                    <li><field name="perceived_salary"/></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title" style="text-align: center">
                                                <span>Cost</span>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Theoretical:</li>
                                                    <li>Current:</li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: left">
                                                <ul>
                                                    <li><field name="theoretical_cost"/></li>
                                                    <li><field name="current_cost"/></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 o_kanban_card_manage_settings">
                                    <field name="hours_informed" widget="progress" title="Informed Hours" options="{'current_value': 'hours_informed', 'max_value': 'theoretical_timesheet'}"/>
                                    <field name="hours_invoice" widget="progress" title="Invoiced Hours" options="{'current_value': 'hours_invoice', 'max_value': 'theoretical_timesheet'}"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_graph">
            <field name="name">hr.employee.graph</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <graph string="Salaries per job">
                    <field name="job_id"/>
                    <field name="total_salary" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="action_employee_analysis" model="ir.actions.act_window">
            <field name="name">Employee Cost Analysis</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="view_id" ref="view_employee_analysis_tree"/>
        </record>
        <record id="employee_analysis_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_employee_analysis_tree"/>
            <field name="act_window_id" ref="action_employee_analysis"/>
        </record>
        <record id="employee_analysis_kanban_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="20"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="hr_kanban_view_employees"/>
            <field name="act_window_id" ref="action_employee_analysis"/>
        </record>
        <menuitem action="action_employee_analysis" id="menu_action_employee_analysis" parent="hr.menu_hr_root" sequence="50"/>
        <record id="employee_list_action_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="20"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="hr.hr_kanban_view_employees"/>
            <field name="act_window_id" ref="hr.open_view_employee_list"/>
        </record>

        <record model="ir.ui.view" id="hr_kanban_view_job">
            <field name="name">hr.job.kanban.analysis</field>
            <field name="model">hr.job</field>
            <field name="priority">100</field>
            <field name="groups_id" eval="[(6, 0, [ref('vauxoo.directive')])]"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard o_salesteam_kanban">
                    <field name="message_is_follower"/>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="message_needaction_counter"/>
                    <field name="hours_invoice"/>
                    <field name="hours_informed"/>
                    <field name="theoretical_timesheet"/>
                    <field name="color"/>
                    <field name="is_cost"/>
                    <field name="generate_income"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_kanban_image">
                                            <h1>
                                                <field name="employee_qty"/>
                                            </h1>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <div class="col-xs-6" style="text-align: left">
                                                <strong>
                                                    <field name="name"/>
                                                </strong>
                                                <ul>

                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Generate Income: <field name="generate_income"/></li>
                                                    <li>It's Cost: <field name="is_cost"/></li>
                                                </ul>
                                            </div>

                                            <div class="col-xs-8">
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                            <div class="col-xs-4 text-right">
                                                <a type="edit">Settings</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="container o_kanban_card_content col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title" style="text-align: center">
                                                <span>Salary</span>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Total:</li>
                                                    <li>On Job:</li>
                                                    <li>Perceived:</li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li><field name="total_salary"/></li>
                                                    <li><field name="salary_on_job"/></li>
                                                    <li><field name="perceived_salary"/></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="col-xs-6 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title" style="text-align: center">
                                                <span>Cost</span>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li>Theoretical:</li>
                                                    <li>Current:</li>
                                                    <li>Avg. Th.:</li>
                                                    <li>Avg. Curr.:</li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-6" style="text-align: right">
                                                <ul>
                                                    <li><field name="theoretical_cost"/></li>
                                                    <li><field name="current_cost"/></li>
                                                    <li><field name="theoretical_cost_avg"/></li>
                                                    <li><field name="current_cost_avg"/></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 o_kanban_card_manage_settings">
                                    <field name="hours_informed" widget="progress" title="Informed Hours" options="{'current_value': 'hours_informed', 'max_value': 'theoretical_timesheet'}"/>
                                    <field name="hours_invoice" widget="progress" title="Invoiced Hours" options="{'current_value': 'hours_invoice', 'max_value': 'theoretical_timesheet'}"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_job_analysis" model="ir.actions.act_window">
            <field name="name">Job Cost Analysis</field>
            <field name="res_model">hr.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
        </record>
        <record id="job_analysis_kanban_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="20"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="hr_kanban_view_job"/>
            <field name="act_window_id" ref="action_job_analysis"/>
        </record>
        <menuitem
            action="action_job_analysis"
            id="menu_action_job_analysis"
            parent="hr.menu_hr_root"
            sequence="60"/>
</odoo>
