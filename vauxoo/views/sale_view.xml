<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.note2html.form</field>
            <field name="model">sale.order</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="replace">
                    <notebook>
                        <page string="Terms and Conditions">
                            <field name="note2html" widget="html" nolabel="1"/>
                        </page>
                        <page string="Edit inline" class="oe_edit_only">
                            <field name="note" placeholder="Terms and conditions"  nolabel="1"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
        <record id="crm_team_view_form" model="ir.ui.view">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="address_id"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
