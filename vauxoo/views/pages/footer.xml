<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="vauxoo_footer" inherit_id="website.layout" name="Vauxoo Footer">
        <xpath expr="//footer" position="replace">
            <footer class="footer_vauxoo bg-epsilon">
                <div class="container container-vx">
                    <section class="row">
                        <div class="col-md-3 col-lg-3 col-xs-12 sub text-center">
                            <h3>About</h3>
                            <b>We are a Latin American company that provides training, coaching,
                  development and implementation of enterprise management, our entire operation strategy is based in
                  the use of Open Source Software and our main product is <span class="o_logo_inline"><span class="o_logo_main">Odoo</span></span> since 2007.
                        </b>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xs-12 sub text-center">
                            <i class="fa fa-road fa-3x mb16"/>
                            <ul class="list-unstyled" id="footer-about">
                                <li>
                                    <a href="/page/website.aboutus">Our Statements</a>
                                </li>
                                <li>
                                    <a href="/jobs">Join to our team</a>
                                </li>
                                <li>
                                    <a href="http://www.odoo.com">Odoo our Main Partner</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xs-12 sub text-center">
                            <i class="fa fa-comment fa-3x mb16"/>
                            <t t-set="website" t-value="env['website'].search([])[0]"/>
                            <p>Call us at
                                <strong>
                                    <t t-esc="website and website.company_id.phone or ''"/>
                                    or
                                    <br/>
                                    <!-- <t t-esc="website and website.company_id.fax or ''"/> -->
                                </strong>
                            </p>
                            <p>Not a big talker? Email us at
                                <strong>
                                    <a class="no-underline" href="mailto:getstarted@vauxoo.com">getstarted@vauxoo.com</a></strong>
                            </p>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xs-12 sub text-center">
                            <i class="fa fa-paper-plane fa-3x mb16"/>
                            <p>Get updates from Vauxoo in your inbox. Read our
                                <strong>
                                    <a class="no-underline" href="/blog">Latest News and Buzz</a></strong>
                            </p>
                        </div>
                    </section>
                </div>
            </footer>
            <t t-call="vauxoo.vauxoo_copyright" t-if="website"/>
        </xpath>
    </template>
    <template id="vauxoo.submenu" name="Submenu">
        <t t-if="website and website.menu_id.child_id[0] != submenu">
            <a class="btn btn-link btn-xs mt8" t-att-href="(website.menu_id.child_id[0] == submenu) and '/' or submenu.url" t-att-target="'_blank' if submenu.new_window else None" t-if="not submenu.child_id" t-ignore="true">
                <span t-field="submenu.name" t-if="website.menu_id.child_id[0] != submenu"/>
            </a>
        </t>
        <t t-if="website and website.menu_id.child_id[0] == submenu">
            <!-- TODO: Dear future me sorry for this wired image -->
            <a class="btn btn-link btn-xs" t-att-href="(website.menu_id.child_id[0] == submenu) and '/' or submenu.url" t-att-target="'_blank' if submenu.new_window else None" t-if="not submenu.child_id" t-ignore="true">
                <img class="img img-responsive" src="http://s3.vauxoo.com/partners/logo-gs-100.png" t-if="website.menu_id.child_id[0] == submenu"/>
            </a>
        </t>
    </template>
    <template id="vauxoo.bottom_menu" name="Bottom Submenu">
        <div aria-label="..." class="btn-group btn-group-xs" role="group">
            <t t-as="submenu" t-foreach="website and website.menu_id.child_id or []">
                <t t-call="vauxoo.submenu"/>
            </t>
        </div>
    </template>
    <template id="vauxoo.social_buttons_copyright" name="Social Buttons">
        <div aria-label="..." class="btn-group btn-group-xs" role="group">
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_facebook or '#'" t-if="website and website.social_facebook">
                <i class="fa fa-3x fa-facebook-square fa-lg"/>
            </a>
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_twitter or '#'" t-if="website and website.social_twitter">
                <i class="fa fa-3x fa-twitter-square fa-lg"/>
            </a>
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_linkedin or '#'" t-if="website and website.social_linkedin">
                <i class="fa fa-3x fa-linkedin-square fa-lg"/>
            </a>
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_youtube or '#'" t-if="website and website.social_youtube">
                <i class="fa fa-3x fa-youtube-square fa-lg"/>
            </a>
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_googleplus or '#'" t-if="website and website.social_googleplus">
                <i class="fa fa-3x fa-google-plus-square fa-lg"/>
            </a>
            <a class="btn btn-xs btn-link" t-att-href="website and website.social_github or '#'" t-if="website and website.social_github">
                <i class="fa fa-3x fa-github-square fa-lg"/>
            </a>
            <a Title="Contact us" class="btn btn-xs btn-link" data-placement="left" data-toggle="tooltip" href="/page/website.contactus">
                <i class="fa fa-3x fa-envelope-square fa-lg"/>
            </a>
            <a Title="Subscribe" class="btn btn-xs btn-link" data-placement="left" data-toggle="tooltip" href="/blog/1/feed">
                <i class="fa fa-3x fa-rss-square fa-lg"/>
            </a>
        </div>
    </template>
    <!-- Setting the copyright placeholder. -->
    <template id="vauxoo_copyright" name="Vauxoo Copyright">
        <section class="row hidden-lg hidden-md bg-gray-darker" id="copyright">
            <div class="container text-center mt32">
                <div class="col-xs-12">
                    <!-- TODO: Skype User 多? channel User?多 is it enought -->
                    <t t-call="vauxoo.social_buttons_copyright"/>
                </div>
                <div class="col-xs-12">
                    <t t-call="vauxoo.bottom_menu"/>
                </div>
                <div class="col-xs-12">
                    <strong>
                        <small class="text-muted">&amp;copy; 2007 - 2015
                            Vauxoo SA de CV All rights reserved.</small>
                    </strong>
                </div>
            </div>
        </section>
        <section class="row hidden-xs hidden-sm bg-gray-darker" id="copyright">
            <div class="container" name="info">
                <div class="row mt24">
                    <div class="col-md-5 col-lg-5" name="info">
                        <div class="row">
                            <t t-call="vauxoo.bottom_menu"/>
                        </div>
                        <div class="row">
                            <strong>
                                <small class="text-muted">&amp;copy; 2007 - 2015
                                        Vauxoo SA de CV All rights reserved.</small>
                            </strong>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2 hidden-xs text-center" id="back-top">
                        <a class="btn btn-link btn-lg" href="#">
                            <i class="fa fa-arrow-up fa-1x"/>
                        </a>
                    </div>
                    <div class="text-right col-xs-12 col-md-5 col-lg-5" name="info">
                        <!-- TODO: Skype User 多? channel User?多 is it enought -->
                        <t t-call="vauxoo.social_buttons_copyright"/>
                    </div>
                    <div class="text-right col-md-5">
                        <t t-call="website.language_selector"/>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
