<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="company_description" inherit_id="website.company_description" name="Company Description">
    <xpath expr="//address" position="replace"/>
    <xpath expr="//a[@t-att-href='res_company.google_map_link()']" position="replace">
      <div class="text-muted"/>
    </xpath>
  </template>
  <template id="contact_us_form" inherit_id="website_crm.contactus_form" name="Office Branches">
    <xpath expr="//div" position="replace">
      <div class="col-md-12 text-center">
        <h1 class="mt64">Get in touch with us</h1>
      </div>
      <div class="container">
        <div class="row col-lg-5 col-lg-offset-0 col-md-5 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-offset-0 col-xs-12">
          <form action="/website_form/" class="s_website_form form-horizontal container-fluid mt32" data-model_name="crm.lead" data-success_page="/page/website_crm.contactus_thanks" enctype="multipart/form-data" method="post">
            <div class="form-group form-field o_website_form_required_custom">
              <label class="control-label" for="contact_name">Your Name</label>
              <input class="form-control o_website_form_input" name="contact_name" required="" t-att-value="request.params.get('contact_name', '')" type="text"/>
            </div>
            <div class="form-group form-field">
              <label class="control-label" for="phone">Phone Number</label>
              <input class="form-control o_website_form_input" name="phone" t-att-value="request.params.get('phone', '')" type="text"/>
            </div>
            <div class="form-group form-field o_website_form_required_custom">
              <label class="control-label" for="email_from">Email</label>
              <input class="form-control o_website_form_input" name="email_from" required="" t-att-value="request.params.get('email_from', '')" type="text"/>
            </div>
            <div class="form-group form-field o_website_form_required_custom">
              <label class="control-label" for="partner_name">Your Company</label>
              <input class="form-control o_website_form_input" name="partner_name" required="" t-att-value="request.params.get('partner_name', '')" type="text"/>
            </div>
            <div class="form-group form-field o_website_form_required">
              <label class="control-label" for="name">Subject</label>
              <input class="form-control o_website_form_input" name="name" required="" t-att-value="request.params.get('name', '')" type="text"/>
            </div>
            <div class="form-group form-field o_website_form_required_custom">
              <label class="control-label" for="description">Your Question</label>
              <textarea class="form-control o_website_form_input" name="description" required="">
                <t t-esc="request.params.get('description', '')"/>
              </textarea>
            </div>
            <div class="form-group nopadding">
              <div class="nomargin">
                <span class="btn btn-primary btn-lg o_website_form_send">Send</span>
                <span id="o_website_form_result"/>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-4 col-md-offset-3 col-lg-4 col-lg-offset-3 text-right hidden-sm hidden-xs mt32">
          <h4>
            <t t-esc="res_company.phone"/>
          </h4>
          <a href="mailto:getstarted@vauxoo.com">
            <h4>getstarted@vauxoo.com</h4>
          </a>
        </div>
      </div>
      <t t-set="branches" t-value="res_company.partner_id.child_ids.filtered('website_published')"/>
      <section class="container bg-cream mb64" t-if="len(branches)">
        <div class="col-md-12 text-center branches-tabs">
          <div class="col-md-12 mb48">
            <h2 class="underlined">Our offices</h2>
          </div>
          <div class="col-md-12 nopadding">
            <t t-set="colima" t-value="env.ref('vauxoo.partner_colima').sudo()"/>
            <a t-att-href="colima.google_map_link()" target="_BLANK">
              <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 mb32">
                <div class="branch-image" style="background-image: url(/web/image/theme_vauxoo.colima)">
                  <h2 class="overlayed mt0 mb0" t-field="colima.name"></h2>
                  <p class="overlayed" t-field="colima.country_id.name"></p>
                  <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
                </div>
                <p class="mb0 mt16 hidden-xs" t-esc="'%s # %s' % (colima.street_name, colima.street_number)"/>
                <small class="mb0 mt16 hidden-lg hidden-md hidden-sm" t-esc="'%s # %s' % (colima.street_name, colima.street_number)"/>
                <p class="hidden-xs" t-esc="colima.phone"/>
                <small class="hidden-lg hidden-sm hidden-md" t-esc="colima.phone"/>
              </div>
            </a>
            <t t-set="leon" t-value="env.ref('vauxoo.partner_leon').sudo()"/>
            <a t-att-href="leon.google_map_link()" target="_BLANK">
              <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 mb32">
                <div class="branch-image" style="background-image: url(/web/image/theme_vauxoo.leon)">
                  <h2 class="overlayed mt0 mb0" t-field="leon.name"></h2>
                  <p class="overlayed" t-field="leon.country_id.name"></p>
                  <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
                </div>
                <p class="mb0 mt16 hidden-xs" t-esc="'%s # %s' % (leon.street_name, leon.street_number)"/>
                <small class="mb0 mt16 hidden-lg hidden-md hidden-sm" t-esc="'%s # %s' % (leon.street_name, leon.street_number)"/>
                <p class="hidden-xs" t-esc="leon.phone"/>
                <small class="hidden-lg hidden-sm hidden-md" t-esc="leon.phone"/>
              </div>
            </a>
            <t t-set="lima" t-value="env.ref('vauxoo.partner_lima').sudo()"/>
            <a t-att-href="lima.google_map_link()" target="_BLANK">
              <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 mb32">
                <div class="branch-image" style="background-image: url(/web/image/theme_vauxoo.lima)">
                  <h2 class="overlayed mt0 mb0" t-field="lima.name"></h2>
                  <p class="overlayed" t-field="lima.country_id.name"></p>
                  <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
                </div>
                <p class="mb0 mt16 hidden-xs" t-esc="'%s # %s' % (lima.street_name, lima.street_number)"/>
                <small class="mb0 mt16 hidden-lg hidden-md hidden-sm" t-esc="'%s # %s' % (lima.street_name, lima.street_number)"/>
                <p class="hidden-xs" t-esc="lima.phone"/>
                <small class="hidden-lg hidden-sm hidden-md" t-esc="lima.phone"/>
              </div>
            </a>
            <t t-set="valencia" t-value="env.ref('vauxoo.partner_valencia').sudo()"/>
            <a t-att-href="valencia.google_map_link()" target="_BLANK">
              <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 mb32">
                <div class="branch-image" style="background-image: url(/web/image/theme_vauxoo.valencia)">
                  <h2 class="overlayed mt0 mb0" t-field="valencia.name"></h2>
                  <p class="overlayed" t-field="valencia.country_id.name"></p>
                  <i class="fa fa-map-marker fa-3x" aria-hidden="true"></i>
                </div>
                <p class="mb0 mt16 hidden-xs" t-esc="'%s # %s' % (valencia.street_name, valencia.street_number)"/>
                <small class="mb0 mt16 hidden-lg hidden-md hidden-sm" t-esc="'%s # %s' % (valencia.street_name, valencia.street_number)"/>
                <p class="hidden-xs" t-esc="valencia.phone"/>
                <small class="hidden-lg hidden-sm hidden-md" t-esc="valencia.phone"/>
              </div>
            </a>
          </div>
        </div>
      </section>
    </xpath>
  </template>
  <template id="contactus_thanks" inherit_id="website_crm.contactus_thanks_ir_ui_view" name="Thank You">
    <xpath expr="//div[@id='wrap']" position="replace">
        <div id="wrap">
          <div class="oe_structure"/>
          <div class="container">
            <div class="oe_structure" style="min-height: 60vh;">
                <div class="container text-center pad10perc">
                    <h1>Thank you!</h1>
                    <h2>
Your message has been sent. Stay tuned to <br class="hidden-xs hidden-sm"/> your mail where we will send you a quick <br class="hidden-xs hidden-sm"/> answer.</h2>
                </div>
                <section>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 text-center mt16 mb16">
                                <a href="/" class="btn btn-primary btn-lg"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to home</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
          </div>
          <div class="oe_structure"/>
        </div>
    </xpath>
  </template>
</odoo>
