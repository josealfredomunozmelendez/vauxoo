<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="timesheet_search_view_filters" model="ir.ui.view">
            <field name="name">timesheet.search.view.filters</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="timesheet_grid.view_timesheet_grid_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='nonvalidated']" position="after">
                    <separator/>
                    <filter name="today" string="Today" domain="[('date', '=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter name="this_week" string="This Week" domain="[('date', '>=', ((context_today() - datetime.timedelta(days=6)).strftime('%Y-%m-%d'))), ('date', '&lt;=', ((context_today()).strftime('%Y-%m-%d')))]"/>
                    <filter name="last_week" string="Last Week" domain="[('date','>=', ((context_today()  + relativedelta(days=-1, weeks=-1)).strftime('%Y-%m-%d'))), ('date','&lt;=', ((context_today()  + relativedelta(days=6, weeks=-1)).strftime('%Y-%m-%d')))]"/>
                    <group string="Group By">
                        <filter name="group_by_day" string="Day" context="{'group_by': ['date:day']}"/>
                        <filter name="group_by_month" string="Month" context="{'group_by': ['date:month', 'account_id']}"/>
                        <filter name="group_by_date" string="Month and day" context="{'group_by': ['date:month', 'date:day']}"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="timesheet_line_search_view_filters" model="ir.ui.view">
            <field name="name">timesheet.line.search.view.filters</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="today" string="Today" domain="[('date', '=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter name="this_week" string="This Week" domain="[('date', '>=', ((context_today() - datetime.timedelta(days=6)).strftime('%Y-%m-%d'))), ('date', '&lt;=', ((context_today()).strftime('%Y-%m-%d')))]"/>
                    <filter name="last_week" string="Last Week" domain="[('date','>=', ((context_today()  + relativedelta(days=-1, weeks=-1)).strftime('%Y-%m-%d'))), ('date','&lt;=', ((context_today()  + relativedelta(days=6, weeks=-1)).strftime('%Y-%m-%d')))]"/>
                    <group string="Group By">
                        <filter name="group_by_day" string="Day" context="{'group_by': ['date:day']}"/>
                        <filter name="group_by_month" string="Month" context="{'group_by': ['date:month', 'account_id']}"/>
                        <filter name="group_by_date" string="Month and day" context="{'group_by': ['date:month', 'date:day']}"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
