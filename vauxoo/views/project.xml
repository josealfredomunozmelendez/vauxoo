<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project_project_form_labels" model="ir.ui.view">
            <field name="name">project.project.form.labels</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='label_tasks']" position="after">
                    <span attrs="{'invisible': [('use_tasks', '=', False)]}">, the Acronymous is: </span>
                    <field name="label_acronymous" class="oe_inline oe_input_align" attrs="{'invisible': [('use_tasks', '=', False)]}"/>
                    <span attrs="{'invisible': [('use_tasks', '=', False)]}"> and for subtasks is: </span>
                    <field name="label_acronymous_subtasks" class="oe_inline oe_input_align" attrs="{'invisible': [('use_tasks', '=', False)]}"/>
                </xpath>
            </field>
        </record>
        <record id="act_vauxoo_timesheet_line_by_task" model="ir.actions.act_window">
            <field name="name">Activities</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="domain">[('task_id', '!=', False)]</field>
            <field name="context">{"default_task_id": active_id, "search_default_task_id": [active_id]}</field>
            <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to record activities.
                </p><p>
                    You can register and track your workings hours by project every
                    day. Every time spent on a project will become a cost and can be re-invoiced to
                    customers if required.
                </p>
            </field>
        </record>

        <record id="project_task_form_ticket" model="ir.ui.view">
            <field name="name">project.task.form.ticket</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="ticket_id"/>
                </xpath>
                <xpath expr="//button[@name='toggle_active']" position="before">
                    <button class="oe_stat_button" name="%(act_vauxoo_timesheet_line_by_task)d" type="action" icon="fa-calendar" string="Timesheets" />
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="class">oe_edit_only</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="display_name" class="oe_read_only"/>
                </xpath>
            </field>
        </record>

        <record id="project_task_product_id_form" model="ir.ui.view">
            <field name="name">project.task.product.id.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="product_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="project_task_extended_search_view" model="ir.ui.view">
            <field name="name">Project Task Extended Search View</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="id"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <separator/>
                    <filter name="color" string="Color" context="{'group_by': 'color'}"/>
                </xpath>
                <xpath expr="//group" position="before">
                    <separator/>
                    <filter name="user_story" string="User Stories" domain="[('parent_id','=', False)]"/>
                    <filter name="acceptability_criteria" string="Acceptability Criteria" domain="[('parent_id','!=', False)]"/>
                    <filter name="not_categorized_yet" string="Not categorized yet" domain="['|', ('color', '=', 0), ('color', '=', False), ('name', 'not ilike', '[%]%')]"/>
                </xpath>
            </field>
        </record>

        <record id="project_task_tree_view" model="ir.ui.view">
            <field name="name">Project Task Tree View</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="id"/>
                    <field name="product_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="project_task_kanban_view" model="ir.ui.view">
            <field name="name">Project Task Kanban View</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="display_name"/>
                </xpath>

                <xpath expr="//div[@class='oe_clear']" position="after">
                    <t t-if="record.subtask_count.raw_value">
                        <a name="open_subtasks" type="object" class="pull-right">
                            <field name="subtask_count"/>
                            <t t-if="record.subtask_count.raw_value == 1">Sub-task</t>
                            <t t-else="">Sub-tasks</t>
                        </a>
                        <div class="oe_clear"/>
                    </t>
                </xpath>

            </field>
        </record>

        <record id="project_task_calendar_view" model="ir.ui.view">
            <field name="name">Project Task Calendar View</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_calendar"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="display_name"/>
                    <field name="name" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
