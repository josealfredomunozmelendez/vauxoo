<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="act_vauxoo_timesheet_line_by_task" model="ir.actions.act_window">
            <field name="name">Activities</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="domain">[('task_id', '!=', False)]</field>
            <field name="context">{"default_task_id": active_id, "search_default_task_id": [active_id]}</field>
            <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to record activities.
                </p><p>
                    You can register and track your workings hours by project every
                    day. Every time spent on a project will become a cost and can be re-invoiced to
                    customers if required.
                </p>
            </field>
        </record>

        <record id="project_task_form_ticket" model="ir.ui.view">
            <field name="name">project.task.form.ticket</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="ticket_id" attrs="{'invisible': [('ticket_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='toggle_active']" position="before">
                    <button class="oe_stat_button" name="%(act_vauxoo_timesheet_line_by_task)d" type="action" icon="fa-calendar" string="Timesheets" />
                </xpath>
            </field>
        </record>

        <record id="project_task_extended_search_view" model="ir.ui.view">
            <field name="name">Project Task Extended Search View</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <separator/>
                    <filter name="color" string="Color" context="{'group_by': 'color'}"/>
                </xpath>
                <xpath expr="//group" position="before">
                    <separator/>
                    <filter name="projects" string="Projects" domain="['|', ('name','=ilike','[P%]%'), ('color','=',4)]"/>
                    <filter name="user_story" string="User Stories" domain="['|', '|', ('name','=ilike','[US%]%'), ('name','=ilike','[HU%]%'), ('color', '=', 6)]"/>
                    <filter name="acceptability_criteria" string="Acceptability Criteria" domain="['|', '|', ('name', '=ilike', '[CA%]%'), ('name','=ilike','[AC%]%'), ('color', '=', 9)]"/>
                    <filter name="not_categorized_yet" string="Not categorized yet" domain="['|', ('color', '=', 0), ('color', '=', False), ('name', 'not ilike', '[%]%')]"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
