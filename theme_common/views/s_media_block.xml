<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Snippet's Body -->
    <template name="Media Block" id="s_media_block">
        <section class="s_media_block" src="https://s3.amazonaws.com/s3.vauxoo.com/frontend.mp4" muted="muted" loop="loop" autoplay="autoplay" iframefit="fitCont" style="height:600px">
            <div class="v-align text-center v-align-vxo">
              <div class="text-center container" style="background: rgba(0, 0, 0, 0.4) none repeat scroll 0% 0%;">
                <div class="col-md-6 col-md-offset-3 col-xs-12" style="max-height: 95%; padding-bottom: 10%">
                  <h1>Open Source Specialists</h1>
                  <p class="mb8 lead">
                    <strong>VAUXOO</strong> is a Latin American company that provides training, coaching, development and implementation of enterprise management sytems and bases its entire operation strategy in the use of Open Source Software and its main product is
                    <span class="o_logo_inline">
                      <span class="o_logo_main">Odoo</span></span> since 2007.</p>
                  <hr class="s_separator"/>
                  <a class="btn btn-warning btn-lg" href="/page/website.contactus">Can we help you?</a>
                </div>
              </div>
            </div>
        </section>
    </template>

    <!-- Snippet's Options -->
    <template id="s_media_block_option" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-js='s_media_block' data-selector="section.s_media_block">
                <li data-video_opt=""><a><i class="fa fa-fw fa-cog"/>Media Type</a></li>
            </div>
        </xpath>
    </template>
</odoo>
