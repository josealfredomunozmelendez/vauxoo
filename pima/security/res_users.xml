<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
            ])]"/>
        </record>

        <record id="base.user_root" model="res.users">
            <field name="groups_id" eval="[
                (4, ref('analytic.group_analytic_accounting')),
            ]"/>
            <field name="company_ids"
                   eval="[(6, 0, [ref('base.main_company'), ref('pima.company_valencia'), ref('vauxoo.company_ve'), ref('vauxoo.company_pe')])]"/>
        </record>

        <record id="auth_signup.default_template_user" model="res.users">
            <field name="lang">es_ES</field>
        </record>
</odoo>
