                                    </div>
                                    <!-- Layout body -->
                                    <div id="treehouse_layout" class="panel-collapse collapse" role="tabpanel" aria-labelledby="treehouse_heading_layout">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-xs-4">
                                                    <label class="icon checked">
                                                        <input type="radio" name="layout_var" data-xmlid=""/>Full width
                                                    </label>
                                                </div>
                                                <div class="col-xs-4">
                                                    <label class="icon">
                                                        <input type="radio" name="layout_var" data-xmlid="theme_treehouse.layout_boxed"/>Boxed
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Patterns -->
                                <div class="panel">
                                    <!-- Patterns heading -->
                                    <div id="treehouse_heading_background" class="panel-heading" role="tab">
