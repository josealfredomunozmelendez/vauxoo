<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customize - Customize Theme -->
    <template id="customize_modal" inherit_id="website.theme_customize" name="treehouse Customize Modal">
        <xpath expr="div" position="replace">
            <div id="theme_customize_modal" class="modal fade" data-theme="theme_treehouse">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="loading_backdrop"></div>
                        <!-- Header -->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="fa fa-close fa-1x"/>
                                <span class="sr-only">Close</span>
                            </button>
                            <h3 class="modal-title">Options</h3>
                        </div>
                        <!-- Body -->
                        <div class="modal-body">
                            <div id="treehouse_customize_modal_collapse" class="panel-group" role="tablist" aria-multiselectable="true">
                                <!-- Colors -->
                                <div class="panel">
                                    <!-- Colors heading -->
                                    <div id="treehouse_heading_colors" class="panel-heading" role="tab">
                                        <a href="#treehouse_nav_footer_colors" class="" data-toggle="collapse" data-parent="#treehouse_customize_modal_collapse" aria-expanded="true" aria-controls="treehouse_nav_footer_colors"><i class="fa fa-1x fa-paint-brush"/>Colors</a>
                                    </div>
                                    <!-- Colors body -->
                                    <div id="treehouse_nav_footer_colors" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="treehouse_heading_colors">
                                        <div class="panel-body">
                                            <div class="row">
                                                <!-- Header -->
                                                <div class="col-xs-12">
                                                    <h5 class="mt0">
                                                        <strong>Navigation</strong>
                                                    </h5>
                                                </div>
                                                <div class="col-xs-3">
                                                    <label class="icon">
                                                        <input type="radio" name="nav_bgcolor_var" data-xmlid="theme_treehouse.nav_white"/>
                                                        <span class="bg-white"></span>
                                                    </label>
                                                </div>
                                                <div class="col-xs-3">
                                                    <label class="icon">
                                                        <input type="radio" name="nav_bgcolor_var" data-xmlid="theme_treehouse.nav_gray_lighter"/>
                                                        <span class="bg-gray-lighter"></span>
                                                    </label>
                                                </div>
                                                <div class="col-xs-3">
                                                    <label class="icon">
                                                        <input type="radio" name="nav_bgcolor_var" data-xmlid="theme_treehouse.nav_gray_darker"/>
                                                        <span class="bg-gray-darker"></span>
                                                    </label>
                                                </div>
                                                <!-- Schemes -->
                                                <div class="col-xs-12">
                                                    <h5>
                                                        <strong>Schemes</strong>
                                                    </h5>
                                                </div>
                                                <div class="col-xs-6">
                                                    <label class="icon checked">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_01"/>
                                                        <span class="color-01-alpha"></span>
                                                        <span class="color-01-beta"></span>
                                                        <span class="color-01-gamma"></span>
                                                        <span class="color-01-delta"></span>
                                                        <span class="color-01-epsilon"></span>
                                                    </label>
                                                    <label class="icon">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_02"/>
                                                        <span class="color-02-alpha"></span>
                                                        <span class="color-02-beta"></span>
                                                        <span class="color-02-gamma"></span>
                                                        <span class="color-02-delta"></span>
                                                        <span class="color-02-epsilon"></span>
                                                    </label>
                                                    <label class="icon">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_03"/>
                                                        <span class="color-03-alpha"></span>
                                                        <span class="color-03-beta"></span>
                                                        <span class="color-03-gamma"></span>
                                                        <span class="color-03-delta"></span>
                                                        <span class="color-03-epsilon"></span>
                                                    </label>
                                                </div>
                                                <div class="col-xs-6">
                                                    <label class="icon">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_04"/>
                                                        <span class="color-04-alpha"></span>
                                                        <span class="color-04-beta"></span>
                                                        <span class="color-04-gamma"></span>
                                                        <span class="color-04-delta"></span>
                                                        <span class="color-04-epsilon"></span>
                                                    </label>
                                                    <label class="icon">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_05"/>
                                                        <span class="color-05-alpha"></span>
                                                        <span class="color-05-beta"></span>
                                                        <span class="color-05-gamma"></span>
                                                        <span class="color-05-delta"></span>
                                                        <span class="color-05-epsilon"></span>
                                                    </label>
                                                    <label class="icon">
                                                        <input type="radio" name="scheme_color_var" data-xmlid="theme_treehouse.colors_06"/>
                                                        <span class="color-06-alpha"></span>
                                                        <span class="color-06-beta"></span>
