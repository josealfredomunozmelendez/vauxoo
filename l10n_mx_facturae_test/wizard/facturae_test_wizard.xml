<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_wizard_test_yaml_factuare">
            <field name="name">wizard.test.yaml.factuare.data</field>
            <field name="model">test.yaml.facturae</field>
            <field name="arch" type="xml">
                <form string="Facturae Test" version="7.0">
                    <p>Facturae test yaml</p>
                        <label for="test_commit" invisible="1"/>
                        <field name="test_commit" invisible="1"/>
                        <label for="number_invoice"/>
                        <field name="number_invoice"/>
                    <footer>
                        <button name="test_factuare_run" context="{'number_invoice': number_invoice}" type="object" string="Apply" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_wizard_test_yaml_factuare" model="ir.actions.act_window">
            <field name="name">Factuare Test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test.yaml.facturae</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_test_yaml_factuare"/>
            <field name="target">new</field>
        </record>

        <menuitem name='Tests Yaml Factuare' id="menu_action_test_yaml_facturae" parent='account.menu_finance_configuration' />
        <menuitem name='Facturae Test' id="menu_action_fatuare_test_wizard" parent='menu_action_test_yaml_facturae' action="action_wizard_test_yaml_factuare"/>
    </data>
</openerp>
