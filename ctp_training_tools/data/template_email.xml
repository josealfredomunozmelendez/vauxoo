<?xml version="1.0"?>
<openerp>
    <!-- Mail template is done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data>
        <!--Email template -->
        <record id="email_template_post_training" model="email.template">
            <field name="name">Post Training Functional Template</field>
            <field name="email_to">${(object.email or '')|safe}</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="reply_to">${(user.email or '')|safe}</field>
            <field name="subject">[Openerp Certification] Important Information</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html">
<![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <div style="width: 375px; margin: 0px; padding: 0px; background-color: #8E0000; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
        <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
            <strong style="text-transform:uppercase;">Next steps for your
                certification process</strong></h3>
    </div>
    <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
        <span style="color: #222; margin-bottom: 5px; display: block; ">
        </span>
        <p>Hello ${object.name}</p>
        <p>This email is to inform you about the next steps related with your
            certification process.</p>
        <a href="http://doc.openerp.com" class="classname">1.- Read the book.</a></br>
        <a target="_NEW" href="http://www.pearsonvue.com/openerp/" class="classname">2.- Schedule your certification exam.</a></br>
            <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
               &nbsp;&nbsp;<strong>You will need this cupon information</strong><br />
               &nbsp;&nbsp;Cupon Number: <strong>${object.certificate_code or 'Certificate Code not setted'}</strong><br />
            </p>
            <p>This cupon number must be protected by you it can be used only one time.</p>
        <a href="#" class="classname">3.- Don't Forget our consultancy services.</a>
    <br/>
    </div>
    <p>If you have any question, do not hesitate to contact us.</p>
    <p>Thank you for choosing ${object.company_id.name or 'us'}!</p>
    <br/>
</div>
]]>
            </field>
        </record>
        <function
            eval="[[ref('email_template_post_training')]]"
            id="create_action_email"
            model="email.template"
            name="create_action"/>
    </data>
</openerp>
