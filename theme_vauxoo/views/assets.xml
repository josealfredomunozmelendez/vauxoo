<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--  Main Style  -->
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Assets Frontend">
        <xpath expr="." position="inside">
            <link type="text/less" rel="stylesheet" href="/theme_vauxoo/static/src/less/colors.less"/>
            <link type="text/less" rel="stylesheet" href="/theme_vauxoo/static/src/less/main.less"/>
            <link type="text/less" rel="stylesheet" href="/theme_vauxoo/static/src/less/menu.less"/>
        </xpath>
        <xpath expr="//link[last()]" position="after">
            <link href="/theme_vauxoo/static/src/less/fonts.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_vauxoo/static/src/less/fonts/ProximaNova.less" rel="stylesheet" type="text/less"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/theme_vauxoo/static/src/js/menu.js"></script>
        </xpath>
    </template>
    <!-- Snippets -->
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']/t[last()]" position="after">
            <t t-snippet="theme_vauxoo.s_cover" t-thumbnail="/theme_vauxoo/static/img/s_cover.png"/>
            <t t-snippet="theme_vauxoo.s_under_cover" t-thumbnail="/theme_vauxoo/static/img/s_under_cover.png"/>
            <t t-snippet="theme_vauxoo.s_body_content" t-thumbnail="/theme_vauxoo/static/img/s_body_content.png"/>
            <t t-snippet="theme_vauxoo.s_pre_footer" t-thumbnail="/theme_vauxoo/static/img/s_pre_footer.png"/>
            <t t-snippet="theme_vauxoo.s_chevron" t-thumbnail="/theme_vauxoo/static/img/s_chevron.png"/>
            <t t-snippet="theme_vauxoo.s_cover_section" t-thumbnail="/theme_vauxoo/static/img/s_cover_section.png"/>
            <t t-snippet="theme_vauxoo.s_cover_section_right" t-thumbnail="/theme_vauxoo/static/img/s_cover_section_right.png"/>
        </xpath>
    </template>
</odoo>
