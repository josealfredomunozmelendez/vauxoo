<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="403" inherit_id="website.403" name="Error: Page not found!">
        <xpath expr="//div[@class='container']" position="replace">
            <data data-transparent="transparent" id="transparency"/>
            <div class="oe_structure oe_empty bg-error" id="vauxoo_header" style="background-image: url(/web/image/theme_vauxoo.doordonot);"/>
            <div class="container" id="cover_container" style="min-height: unset;">
                <div class="container hidden-sm hidden-xs">
                    <h1>403</h1>
                    <h2>Access denied.</h2>
                    <div class="text-center col-lg-6 col-md-6">
                        <p>It seems that the credentials you provided are not authorized to access the page you are trying to reach. Please go back and double check them or contact us so we can know how to fix this issue.</p>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <a class="btn btn-lg btn-secondary" href="/">
                            <span class="fa fa-arrow-left"/> Go Home</a>
                        <a class="btn btn-lg btn-primary" href="/page/contactus">Contact us</a>
                    </div>
                </div>
                <div class="container hidden-md hidden-lg text-center">
                    <h1>403</h1>
                    <h2>Access denied.</h2>
                    <div class="text-center col-sm-10 col-xs-12 col-sm-offset-1 col-xs-offset-0">
                        <p>It seems that the credentials you provided are not authorized to access the page you are trying to reach. Please go back and double check them or contact us so we can know how to fix this issue.</p>
                    </div>
                    <div class="col-xs-1col-sm-12">
                        <a class="btn btn-secondary" href="/">
                            <span class="fa fa-arrow-left"/> Go Home</a>
                        <a class="btn btn-primary" href="/page/contactus">Contact us</a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
