<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_auto_analytic_form">
            <field name="name">Contract Codes Update</field>
            <field name="model">account.analytic.account.installer</field>
            <field name="inherit_id" ref="base.res_config_view_base"/>
            <field name="arch" type="xml">
                <form position="attributes" version="7.0">
                    <attribute name="string">Contract Codes Update</attribute>
                </form>
            <group string="res_config_contents" position="replace">
                <separator string="Contract Codes Update"/>                                            
                <p>This wizard is required to update the "Contract Code" on existing contracts</p>
            </group>
            </field>
        </record>
        <record id="action_auto_analytic" model="ir.actions.act_window">                        
            <field name="name">Contract Codes Update</field>                                            
            <field name="type">ir.actions.act_window</field>                                            
            <field name="res_model">account.analytic.account.installer</field>                                      
            <field name="view_id" ref="view_auto_analytic_form"/>                                         
            <field name="view_type">form</field>                                                        
            <field name="view_mode">form</field>                                                        
            <field name="target">new</field>                                                            
        </record>                                                                                       
        <record model="ir.actions.todo" id="config_auto_analytic">                                     
            <field name="action_id" ref="action_auto_analytic"/>                                
            <field name="type">automatic</field>                                                        
        </record>
    </data>
</openerp>
